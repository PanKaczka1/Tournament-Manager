<Page x:Class="Tournament_Manager.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page1">

    <StackPanel VerticalAlignment="Center" Width="150">
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="0,0,0,10"></Setter>
                <Setter Property="Height" Value="30"></Setter>
            </Style>
        </StackPanel.Resources>
        <Button Name="newTournamentBtn" Click="newTournamentBtn_Click">Nowy turniej</Button>
        <Button Name="loadTournamentBtn" Click="loadTournamentBtn_Click">Wczytaj turniej</Button>
        <Button Name="quitBtn" Click="quitBtn_Click">Wyjście</Button>
    </StackPanel>
</Page>
